<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="InfluMe.Views.ProductDeliveryTrackingPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:buttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
    xmlns:control="clr-namespace:InfluMe.Controls"
    xmlns:converter="clr-namespace:InfluMe.Converters"
    xmlns:progressBar="clr-namespace:Syncfusion.XForms.ProgressBar;assembly=Syncfusion.SfProgressBar.XForms"
    xmlns:viewModel="clr-namespace:InfluMe.ViewModels"
    x:Name="ProductTrackingPage"
    Title="Order Status"
    BackgroundColor="{DynamicResource Gray-100}"
    NavigationPage.HasNavigationBar="False"
    Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converter:InverseBoolConverter x:Key="InverseBoolConverter" />
            <converter:StringToImageSourceConverter x:Key="StringToImageSourceConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.ControlTemplate>
        <ControlTemplate>
            <StackLayout x:Name="titleLayout" Spacing="0">
                <control:TitleView Title="Delivery Status">
                    <control:TitleView.LeadingView>
                        <!--  Back button command  -->
                        <buttons:SfButton
                            x:Name="backButton"
                            Command="{Binding Path=BindingContext.BackButtonCommand, Source={x:Reference ProductTrackingPage}}"
                            CommandParameter="{x:Reference backButton}"
                            Style="{StaticResource IconButtonStyle}"
                            Text="{StaticResource Back}" />
                    </control:TitleView.LeadingView>
                </control:TitleView>
                <ContentPresenter />
            </StackLayout>
        </ControlTemplate>
    </ContentPage.ControlTemplate>


    <ContentPage.Content>
        <ScrollView>
            <StackLayout HorizontalOptions="FillAndExpand" Spacing="0">
                <Grid
                    Margin="0,16,0,0"
                    BackgroundColor="{DynamicResource Gray-Bg}"
                    ColumnDefinitions="Auto, *"
                    ColumnSpacing="0"
                    RowSpacing="0">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="{OnIdiom Default=1, Phone=0}" />
                    </Grid.RowDefinitions>

                    <!--  Product image  -->
                    <Image
                        Grid.Row="0"
                        Grid.RowSpan="4"
                        Grid.Column="0"
                        Margin="16,8,16,16"
                        Aspect="AspectFill"
                        BackgroundColor="{DynamicResource Gray-200}"
                        Source="{Binding Job.job.jobImageBlob, Converter={StaticResource StringToImageSourceConverter}}"
                        HeightRequest="80"
                        WidthRequest="80">
                    </Image>

                    <!--  Product name  -->
                    <Label
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="0,12,0,4"
                        FontSize="14"
                        HorizontalOptions="Start"
                        Style="{StaticResource TitleLabelStyle}"
                        Text="{Binding Job.job.jobProduct}" />
                    

                    <!--  Product Brand -->
                    <Label
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="0,0,0,8"
                        FontSize="12"
                        HorizontalOptions="Start"
                        Style="{StaticResource DescriptionLabelStyle}"
                        Text="{Binding Job.job.jobBrand}" />

                    <StackLayout
                        Grid.Row="2"
                        Grid.Column="1"
                        Orientation="Horizontal">
                        
                        <!--  Courier  -->
                        <Label
                        FontSize="12"
                        HorizontalOptions="Start"
                        Style="{StaticResource DescriptionLabelStyle}"
                        Text="{Binding Data.summary.courier, StringFormat='Delivery by {0} -'}" />

                        <!--  Order ID  -->
                        <Label
                        FontSize="12"
                        HorizontalOptions="Start"
                        Style="{StaticResource DescriptionLabelStyle}"
                        Text="{Binding Job.delivery.deliveryReceipt, StringFormat=' {0}'}" />
                    </StackLayout>
                    
                    <!--  Status  -->
                    <Label
                        Grid.Row="3"
                        Grid.Column="1"
                        FontSize="12"
                        HorizontalOptions="Start"
                        Style="{StaticResource DescriptionLabelStyle}"
                        Text="{Binding Data.summary.status, StringFormat='Status: {0}'}" />

                </Grid>
                
                <!--  Product delivery tracking  -->
                <progressBar:SfStepProgressBar
                    x:Name="stepProgress"
                    Margin="0,20,0,0"
                    BackgroundColor="{DynamicResource Gray-Bg}"
                    BindableLayout.ItemsSource="{Binding ProgressesCollection}"
                    HorizontalOptions="FillAndExpand"
                    Orientation="Vertical"
                    TitleAlignment="Start"
                    TitleSpace="12"
                    VerticalOptions="FillAndExpand">
 
                    <progressBar:SfStepProgressBar.NotStartedStepStyle>
                        <progressBar:StepStyle
                            x:TypeArguments="progressBar:NotStartedStepState"
                            MarkerContentFillColor="{DynamicResource Gray-200}"
                            MarkerContentSize="12"
                            MarkerShapeType="Circle"
                            TrackColor="{DynamicResource Gray-200}" />
                    </progressBar:SfStepProgressBar.NotStartedStepStyle>

                    <progressBar:SfStepProgressBar.InProgressStepStyle>
                        <progressBar:StepStyle
                            x:TypeArguments="progressBar:InProgressStepState"
                            MarkerFillColor="{DynamicResource PrimaryColor}"
                            MarkerShapeType="Circle"
                            MarkerStrokeColor="{DynamicResource PrimaryDarkColor}"
                            ProgressLineColor="{DynamicResource PrimaryColor}" />
                    </progressBar:SfStepProgressBar.InProgressStepStyle>
                    
  
                    <progressBar:SfStepProgressBar.CompletedStepStyle>
                        <progressBar:StepStyle
                            x:TypeArguments="progressBar:CompletedStepState"
                            MarkerContentFillColor="{DynamicResource Gray-White}"
                            MarkerContentType="Tick"
                            MarkerFillColor="{DynamicResource PrimaryColor}"
                            MarkerShapeType="Circle"
                            MarkerStrokeColor="{DynamicResource PrimaryDarkColor}" />
                    </progressBar:SfStepProgressBar.CompletedStepStyle>

                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <progressBar:StepView
                                WidthRequest="150"
                                Margin="20,16,0,0"
                                ProgressValue="{Binding progressVal}"
                                Status="{Binding stepStatus}">
                                <progressBar:StepView.PrimaryFormattedText>
                                    <FormattedString>
                                        <Span
                                            FontFamily="Montserrat-SemiBold"
                                            FontSize="16"
                                            LineHeight="{OnPlatform Default=1.25,
                                                                    iOS=-1}"
                                            Text="{Binding status}"/>
                                        <Span Text="&#10;&#10;" />
                                        <Span
                                            FontFamily="Montserrat-SemiBold"
                                            FontSize="12"
                                            LineHeight="{OnPlatform Default=1.25,
                                                                    iOS=-1}"
                                            Text="{Binding date}"
                                            TextColor="{DynamicResource Gray-900}" />
                                        <Span Text="&#10;" />
                                        
                                    </FormattedString>
                                </progressBar:StepView.PrimaryFormattedText>
                            </progressBar:StepView>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </progressBar:SfStepProgressBar>

                
            </StackLayout>
            
        </ScrollView>
    </ContentPage.Content>
</ContentPage>